<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SysPres</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SysPres.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light">
    @{
        var pageTitle = ViewData["Title"]?.ToString();
        var isDashboard = string.Equals(pageTitle, "Dashboard", StringComparison.OrdinalIgnoreCase);
        var mainClass = isDashboard ? "container-fluid p-0" : "container py-4";
        var toastMessage = TempData["ToastMessage"] as string;
        var toastType = TempData["ToastType"] as string ?? "success";
        var toastTitle = TempData["ToastTitle"] as string ?? "InformaciÃ³n";
        var toastClass = toastType switch
        {
            "danger" => "text-bg-danger",
            "warning" => "text-bg-warning",
            "info" => "text-bg-info",
            _ => "text-bg-success"
        };
    }

    @if (!string.IsNullOrWhiteSpace(toastMessage))
    {
        <div class="position-fixed top-0 start-50 translate-middle-x p-3 w-100 d-flex justify-content-center" style="z-index: 1080;">
            <div id="appToast" class="toast @toastClass border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true" style="max-width: 520px; width: min(92vw, 520px);">
                <div class="d-flex">
                    <div class="toast-body">
                        <div class="fw-bold mb-1">@toastTitle</div>
                        <div>@toastMessage</div>
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <main class="@mainClass">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (!string.IsNullOrWhiteSpace(toastMessage))
    {
        <script>
            (() => {
                const toastElement = document.getElementById('appToast');
                if (!toastElement) return;
                const toast = new bootstrap.Toast(toastElement, { delay: 3500 });
                toast.show();
            })();
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
