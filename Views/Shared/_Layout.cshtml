<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SysPres</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SysPres.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
    @{
        var pageTitle = ViewData["Title"]?.ToString();
        var isDashboard = string.Equals(pageTitle, "Dashboard", StringComparison.OrdinalIgnoreCase);
        var mainClass = isDashboard ? "container-fluid p-0" : "container py-4";
    }
    <main class="@mainClass">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
