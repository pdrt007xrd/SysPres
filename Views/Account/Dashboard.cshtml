@model SysPres.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-0 min-vh-100">
    <aside class="col-12 col-md-3 col-lg-2 border-end bg-white">
        <div class="d-md-none p-3 border-bottom">
            <button class="btn btn-outline-primary w-100" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-expanded="false" aria-controls="sidebarMenu">
                Menú
            </button>
        </div>

        <div class="collapse d-md-block" id="sidebarMenu">
            <div class="p-3 p-md-4">
                <h5 class="mb-4 fw-bold text-primary">SysPres</h5>
                @{
                    var canClientes = User.IsInRole("Admin") || User.HasClaim("permission", "Clientes");
                    var canPrestamos = User.IsInRole("Admin") || User.HasClaim("permission", "Prestamos");
                    var canPagos = User.IsInRole("Admin") || User.HasClaim("permission", "Pagos");
                    var canReportes = User.IsInRole("Admin") || User.HasClaim("permission", "Reportes");
                    var canConfig = User.IsInRole("Admin");
                }
                <ul class="nav nav-pills flex-column gap-2">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Inicio</a>
                    </li>
                    @if (canClientes)
                    {
                        <li class="nav-item">
                            <a asp-controller="Clientes" asp-action="Index" class="nav-link link-dark">Clientes</a>
                        </li>
                    }
                    @if (canPrestamos)
                    {
                        <li class="nav-item">
                            <a asp-controller="Prestamos" asp-action="Index" class="nav-link link-dark">Préstamos</a>
                        </li>
                    }
                    @if (canPagos)
                    {
                        <li class="nav-item">
                            <a asp-controller="Pagos" asp-action="Index" class="nav-link link-dark">Pagos</a>
                        </li>
                    }
                    @if (canReportes)
                    {
                        <li class="nav-item">
                            <a asp-controller="Reportes" asp-action="Index" class="nav-link link-dark">Reportes</a>
                        </li>
                    }
                    @if (canConfig)
                    {
                        <li class="nav-item">
                            <a asp-controller="Configuracion" asp-action="Index" class="nav-link link-dark">Configuración</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </aside>

    <section class="col-12 col-md-9 col-lg-10 p-3 p-md-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
            <div>
                <h2 class="mb-1">Bienvenido al sistema SysPres</h2>
                <p class="text-muted mb-0">Gestiona módulos y operaciones desde el panel lateral.</p>
            </div>
            <form method="post" asp-controller="Account" asp-action="Logout">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-danger">Cerrar sesión</button>
            </form>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-12 col-sm-6 col-xl-2">
                <div class="card shadow-sm h-100 border-primary">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Préstamos activos</h6>
                        <div class="fs-4 fw-bold text-primary">@Model.PrestamosActivos</div>
                        <span class="small text-muted">A futuro</span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-xl-2">
                <div class="card shadow-sm h-100 border-warning">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Préstamos en atraso</h6>
                        <div class="fs-4 fw-bold text-warning">@Model.PrestamosEnAtraso</div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-xl-2">
                <div class="card shadow-sm h-100 border-warning">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Total atrasado</h6>
                        <div class="fs-4 fw-bold text-warning">@Model.TotalAtrasado.ToString("C0")</div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-xl-2">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Capital prestado</h6>
                        <div class="fs-4 fw-bold">@Model.CapitalPrestado.ToString("C0")</div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-xl-2">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Monto global a cobrar</h6>
                        <div class="fs-4 fw-bold text-warning">@Model.MontoGlobalCobrar.ToString("C0")</div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-xl-2">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h6 class="text-muted mb-1">Interés recolectado</h6>
                        <div class="fs-4 fw-bold">@Model.InteresRecolectado.ToString("C0")</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h6 class="mb-0">Actividad reciente</h6>
                <a asp-action="ActividadPdf" target="_blank" class="btn btn-sm btn-outline-dark">PDF / Imprimir</a>
            </div>
            <div class="table-responsive border-top" style="max-height: 360px; overflow-y: auto;">
                <table class="table table-hover table-sm mb-0">
                    <thead class="table-light" style="position: sticky; top: 0; z-index: 2;">
                        <tr>
                            <th>Fecha</th>
                            <th>Usuario</th>
                            <th>Acción</th>
                            <th>Detalle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ActividadReciente)
                        {
                            <tr>
                                <td>@item.FechaUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td><span class="badge text-bg-secondary">@item.Usuario</span></td>
                                <td>@item.Accion @item.Entidad</td>
                                <td>@(string.IsNullOrWhiteSpace(item.Detalle) ? "-" : item.Detalle)</td>
                            </tr>
                        }
                        @if (!Model.ActividadReciente.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">Sin actividad registrada.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
