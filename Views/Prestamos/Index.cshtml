@model SysPres.ViewModels.PrestamoIndexViewModel
@{
    ViewData["Title"] = "Préstamos";
}

<div class="container-fluid py-3">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <div>
            <h2 class="mb-1">Préstamos</h2>
            <p class="text-muted mb-0">Gestión de préstamos por cliente.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Account" asp-action="Dashboard" class="btn btn-outline-secondary">Volver al panel</a>
            <a asp-action="Create" class="btn btn-primary">Nuevo préstamo</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Cliente</th>
                        <th>Monto</th>
                        <th>Tasa</th>
                        <th>Frecuencia</th>
                        <th>Saldo pendiente</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Prestamos)
                    {
                        <tr>
                            <td>#@p.Id</td>
                            <td>@(p.Cliente?.Nombre ?? "-")</td>
                            <td>@p.Monto.ToString("C0")</td>
                            <td>@p.TasaInteresAnual.ToString("0.##")%</td>
                            <td>@p.FrecuenciaPago (@p.NumeroPagos pagos)</td>
                            <td>@p.SaldoPendiente.ToString("C0")</td>
                            <td><span class="badge @(p.Estado == "Saldado" ? "text-bg-success" : "text-bg-warning")">@p.Estado</span></td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary">Ver</a>
                                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-secondary">Editar</a>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Prestamos.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">No hay préstamos registrados.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
