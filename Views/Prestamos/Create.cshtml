@model SysPres.ViewModels.PrestamoCreateViewModel
@{
    ViewData["Title"] = "Nuevo Préstamo";
}

<div class="container py-3" style="max-width: 980px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Nuevo préstamo</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" asp-action="Create">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label">Cliente</label>
                        <input type="text" id="clienteSearchInput" class="form-control mb-2" placeholder="Escribe para filtrar clientes..." autocomplete="off" />
                        <select asp-for="ClienteId" id="clienteIdSelect" class="form-select">
                            <option value="">Seleccione cliente...</option>
                            @foreach (var c in Model.Clientes)
                            {
                                <option value="@c.Value">@c.Text</option>
                            }
                        </select>
                        <small class="text-muted">El dropdown carga clientes guardados; escribe para ver sugerencias.</small>
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Monto" class="form-label">Monto prestado</label>
                        <input asp-for="Monto" id="montoInput" type="number" min="1" step="1" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TasaInteresAnual" class="form-label">Porciento mensual a prestar (%)</label>
                        <input asp-for="TasaInteresAnual" id="tasaInput" type="number" min="0" max="100" step="1" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="NumeroPagos" class="form-label">Cantidad de pagos</label>
                        <input asp-for="NumeroPagos" id="pagosInput" type="number" min="1" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="FrecuenciaPago" class="form-label">Frecuencia</label>
                        <select asp-for="FrecuenciaPago" id="frecuenciaInput" class="form-select">
                            <option>Diario</option>
                            <option>Semanal</option>
                            <option>Quincenal</option>
                            <option>Mensual</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="FechaInicio" class="form-label">Fecha inicio</label>
                        <input asp-for="FechaInicio" id="fechaInicioInput" type="date" class="form-control" />
                    </div>
                    <div class="col-12">
                        <label asp-for="Observaciones" class="form-label"></label>
                        <textarea asp-for="Observaciones" class="form-control" rows="2"></textarea>
                    </div>
                </div>

                <div class="card mt-4 bg-light border-0">
                    <div class="card-body">
                        <h6 class="mb-3">Cálculo estimado</h6>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <small class="text-muted d-block">Interés</small>
                                <strong id="interesPreview">$0</strong>
                            </div>
                            <div class="col-md-4">
                                <small class="text-muted d-block">Total a pagar</small>
                                <strong id="totalPreview">$0</strong>
                            </div>
                            <div class="col-md-4">
                                <small class="text-muted d-block">Valor de cada pago</small>
                                <strong id="cuotaPreview">$0</strong>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-3 mb-2">
                            <small class="text-muted">Vista compacta del cronograma</small>
                            <small class="text-muted">Con scroll interno</small>
                        </div>
                        <div class="table-responsive border rounded" style="max-height: 320px; overflow-y: auto;">
                            <table class="table table-sm align-middle mb-0">
                                <thead class="table-light" style="position: sticky; top: 0; z-index: 2;">
                                    <tr>
                                        <th>Pago #</th>
                                        <th>Fecha estimada</th>
                                        <th class="text-end">Monto</th>
                                    </tr>
                                </thead>
                                <tbody id="scheduleBody">
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-3">Completa monto, tasa y cantidad de pagos para ver el cronograma.</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="2" class="text-end">Total de cuotas</th>
                                        <th id="scheduleTotal" class="text-end">$0</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <small class="text-muted d-block mt-2">El interés se calcula por tasa mensual y se prorratea por frecuencia (diario, semanal, quincenal o mensual).</small>
                    </div>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Crear préstamo</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const clienteSearchInput = document.getElementById('clienteSearchInput');
            const clienteIdSelect = document.getElementById('clienteIdSelect');
            const clienteSource = clienteIdSelect
                ? Array.from(clienteIdSelect.options)
                    .filter(o => (o.value || '').trim() !== '')
                    .map(o => ({ value: o.value, text: o.textContent || '' }))
                : [];

            const monto = document.getElementById('montoInput');
            const tasa = document.getElementById('tasaInput');
            const pagos = document.getElementById('pagosInput');
            const frecuencia = document.getElementById('frecuenciaInput');
            const fechaInicio = document.getElementById('fechaInicioInput');
            const interesPreview = document.getElementById('interesPreview');
            const totalPreview = document.getElementById('totalPreview');
            const cuotaPreview = document.getElementById('cuotaPreview');
            const scheduleBody = document.getElementById('scheduleBody');
            const scheduleTotal = document.getElementById('scheduleTotal');

            function filterClientes() {
                if (!clienteIdSelect) return;
                const query = (clienteSearchInput?.value || '').trim().toLowerCase();
                const currentValue = clienteIdSelect.value;

                clienteIdSelect.innerHTML = '';
                const placeholder = document.createElement('option');
                placeholder.value = '';
                placeholder.textContent = 'Seleccione cliente...';
                clienteIdSelect.appendChild(placeholder);

                const filtered = clienteSource.filter(c => c.text.toLowerCase().includes(query));

                for (const c of filtered) {
                    const option = document.createElement('option');
                    option.value = c.value;
                    option.textContent = c.text;
                    clienteIdSelect.appendChild(option);
                }

                if (filtered.some(c => c.value === currentValue)) {
                    clienteIdSelect.value = currentValue;
                } else {
                    clienteIdSelect.value = '';
                }
            }

            function syncClienteSearchWithSelection() {
                if (!clienteIdSelect || !clienteSearchInput) return;
                const selected = clienteSource.find(c => c.value === clienteIdSelect.value);
                if (selected) {
                    clienteSearchInput.value = selected.text;
                }
            }

            function money(v) {
                return new Intl.NumberFormat('es-DO', {
                    style: 'currency',
                    currency: 'DOP',
                    minimumFractionDigits: 0,
                    maximumFractionDigits: 0
                }).format(v || 0);
            }

            function calc() {
                const m = parseFloat(monto.value || '0');
                const t = parseFloat(tasa.value || '0');
                const n = parseInt(pagos.value || '0');
                const frecuenciaValue = frecuencia ? frecuencia.value : 'Semanal';
                const factorMes = frecuenciaValue === 'Diario'
                    ? (1 / 30)
                    : frecuenciaValue === 'Semanal'
                        ? (7 / 30)
                        : frecuenciaValue === 'Quincenal'
                            ? (15 / 30)
                            : 1;
                const mesesEquivalentes = n * factorMes;
                const interes = Math.round(m * (t / 100) * mesesEquivalentes);
                const total = Math.round(m + interes);
                const cuota = n > 0 ? Math.round(total / n) : 0;

                interesPreview.textContent = money(interes);
                totalPreview.textContent = money(total);
                cuotaPreview.textContent = money(cuota);

                renderSchedule(total, n);
            }

            function parseDate(value) {
                if (!value) return null;
                const parts = value.split('-');
                if (parts.length !== 3) return null;
                const y = parseInt(parts[0], 10);
                const m = parseInt(parts[1], 10) - 1;
                const d = parseInt(parts[2], 10);
                return new Date(y, m, d);
            }

            function addByFrecuencia(baseDate, frecuenciaValue, salto) {
                const next = new Date(baseDate);
                if (frecuenciaValue === 'Diario') {
                    next.setDate(next.getDate() + salto);
                    return next;
                }
                if (frecuenciaValue === 'Semanal') {
                    next.setDate(next.getDate() + (7 * salto));
                    return next;
                }
                if (frecuenciaValue === 'Quincenal') {
                    next.setDate(next.getDate() + (15 * salto));
                    return next;
                }
                next.setMonth(next.getMonth() + salto);
                return next;
            }

            function formatDate(d) {
                return new Intl.DateTimeFormat('es-DO', { day: '2-digit', month: '2-digit', year: 'numeric' }).format(d);
            }

            function renderSchedule(total, n) {
                if (!scheduleBody || !scheduleTotal) {
                    return;
                }

                if (!(n > 0) || !(total > 0)) {
                    scheduleBody.innerHTML = '<tr><td colspan="3" class="text-center text-muted py-3">Completa monto, tasa y cantidad de pagos para ver el cronograma.</td></tr>';
                    scheduleTotal.textContent = money(0);
                    return;
                }

                const baseDate = parseDate(fechaInicio ? fechaInicio.value : '');
                const frecuenciaValue = frecuencia ? frecuencia.value : 'Semanal';
                const cuotaBase = Math.round(total / n);
                let acumulado = 0;
                let rows = '';

                for (let i = 1; i <= n; i++) {
                    const montoCuota = i === n
                        ? Math.round(total - acumulado)
                        : cuotaBase;

                    acumulado = Math.round(acumulado + montoCuota);

                    const fecha = baseDate ? formatDate(addByFrecuencia(baseDate, frecuenciaValue, i)) : '-';
                    rows += `<tr><td>${i}</td><td>${fecha}</td><td class="text-end">${money(montoCuota)}</td></tr>`;
                }

                scheduleBody.innerHTML = rows;
                scheduleTotal.textContent = money(acumulado);
            }

            [monto, tasa, pagos].forEach(el => el && el.addEventListener('input', calc));
            if (frecuencia) {
                frecuencia.addEventListener('change', calc);
            }
            if (fechaInicio) {
                fechaInicio.addEventListener('change', calc);
            }
            calc();

            if (clienteSearchInput) {
                clienteSearchInput.addEventListener('input', filterClientes);
            }
            if (clienteIdSelect) {
                clienteIdSelect.addEventListener('change', syncClienteSearchWithSelection);
            }
            filterClientes();
            syncClienteSearchWithSelection();

            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function (e) {
                    if (clienteIdSelect && !clienteIdSelect.value) {
                        e.preventDefault();
                        alert('Seleccione un cliente de la lista.');
                    }
                });
            }
        })();
    </script>
}
