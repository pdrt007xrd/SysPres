@model SysPres.ViewModels.ConfiguracionViewModel
@{
    ViewData["Title"] = "Configuración";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Configuración</h2>
            <p class="text-muted mb-0">Administración de empresa, empleados/cobradores y permisos por usuario.</p>
        </div>
        <a asp-controller="Account" asp-action="Dashboard" class="btn btn-outline-secondary">Volver al panel</a>
    </div>

    <div class="row g-3">
        <div class="col-12 col-xl-5">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white"><h6 class="mb-0">Datos de la empresa</h6></div>
                <div class="card-body">
                    <form method="post" asp-action="GuardarEmpresa">
                        @Html.AntiForgeryToken()
                        <input asp-for="Empresa.Id" type="hidden" />
                        <div class="mb-3">
                            <label asp-for="Empresa.Nombre" class="form-label">Nombre</label>
                            <input asp-for="Empresa.Nombre" class="form-control" />
                            <span asp-validation-for="Empresa.Nombre" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Empresa.Direccion" class="form-label">Dirección</label>
                            <input asp-for="Empresa.Direccion" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Empresa.Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Empresa.Telefono" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Empresa.Ciudad" class="form-label">Ciudad</label>
                            <input asp-for="Empresa.Ciudad" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar empresa</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 col-xl-7">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white"><h6 class="mb-0">Crear empleado / cobrador</h6></div>
                <div class="card-body">
                    <form method="post" asp-action="CrearEmpleado">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="NuevoEmpleado.UserName" class="form-label">Usuario</label>
                                <input asp-for="NuevoEmpleado.UserName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NuevoEmpleado.FullName" class="form-label">Nombre completo</label>
                                <input asp-for="NuevoEmpleado.FullName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NuevoEmpleado.Password" class="form-label">Contraseña</label>
                                <input asp-for="NuevoEmpleado.Password" type="password" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NuevoEmpleado.ConfirmPassword" class="form-label">Confirmar contraseña</label>
                                <input asp-for="NuevoEmpleado.ConfirmPassword" type="password" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NuevoEmpleado.Role" class="form-label">Rol</label>
                                <select asp-for="NuevoEmpleado.Role" class="form-select">
                                    <option value="Admin">Admin</option>
                                    <option value="Empleado">Empleado</option>
                                    <option value="Cobrador">Cobrador</option>
                                    <option value="User">User</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NuevoEmpleado.IsActive" class="form-label">Estado inicial</label>
                                <select asp-for="NuevoEmpleado.IsActive" class="form-select">
                                    <option value="true">Activo</option>
                                    <option value="false">Inactivo</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Permisos iniciales</label>
                                <div class="d-flex flex-wrap gap-3">
                                    @foreach (var p in Model.PermisosDisponibles)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="NuevoEmpleado.Permissions" value="@p" id="new_perm_@p" />
                                            <label class="form-check-label" for="new_perm_@p">@p</label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-success">Crear usuario</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white"><h6 class="mb-0">Permisos por usuario</h6></div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Usuario</th>
                                    <th>Nombre</th>
                                    <th>Rol</th>
                                    <th>Estado</th>
                                    <th>Permisos</th>
                                    <th>Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var u in Model.Usuarios)
                                {
                                    var isAdmin = string.Equals(u.Role, "Admin", StringComparison.OrdinalIgnoreCase);
                                    <tr>
                                        <td>@u.UserName</td>
                                        <td>@(string.IsNullOrWhiteSpace(u.FullName) ? "-" : u.FullName)</td>
                                        <td><span class="badge text-bg-secondary">@u.Role</span></td>
                                        <td>
                                            @if (isAdmin)
                                            {
                                                <span class="badge text-bg-primary">Siempre activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge @(u.IsActive ? "text-bg-success" : "text-bg-danger")">@(u.IsActive ? "Activo" : "Inactivo")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (isAdmin)
                                            {
                                                <span class="text-muted">Acceso total</span>
                                            }
                                            else
                                            {
                                                <form method="post" asp-action="GuardarPermisos" class="d-flex flex-wrap gap-3 align-items-center">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="userId" value="@u.Id" />
                                                    @foreach (var p in Model.PermisosDisponibles)
                                                    {
                                                        var checkedPerm = u.Permissions.Contains(p, StringComparer.OrdinalIgnoreCase);
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" name="permissions" value="@p" id="perm_@(u.Id)_@(p)" checked="@(checkedPerm ? "checked" : null)" />
                                                            <label class="form-check-label" for="perm_@(u.Id)_@(p)">@p</label>
                                                        </div>
                                                    }
                                                    <div class="form-check ms-2">
                                                        <input class="form-check-input" type="checkbox" name="isActive" value="true" id="active_@u.Id" checked="@(u.IsActive ? "checked" : null)" />
                                                        <input type="hidden" name="isActive" value="false" />
                                                        <label class="form-check-label" for="active_@u.Id">Activo</label>
                                                    </div>
                                                    <button type="submit" class="btn btn-sm btn-outline-primary">Guardar</button>
                                                </form>
                                            }
                                        </td>
                                        <td>@(isAdmin ? "-" : "Editable")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
