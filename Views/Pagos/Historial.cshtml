@model SysPres.ViewModels.PagoHistorialViewModel
@{
    ViewData["Title"] = "Historial de Pagos";
}

<div class="container-fluid py-3">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <div>
            <h2 class="mb-1">Histórico de pagos</h2>
            <p class="text-muted mb-0">
                @if (Model.ClienteId.HasValue)
                {
                    <span>Cliente: <strong>@(Model.ClienteNombre ?? "N/D")</strong></span>
                }
                else
                {
                    <span>Mostrando pagos de todos los clientes.</span>
                }
            </p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">Volver a pagos</a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Historial" class="row g-3 align-items-end">
                <div class="col-md-8">
                    <label class="form-label">Filtrar por cliente</label>
                    <input type="hidden" name="clienteId" id="clienteIdHidden" value="@(Model.ClienteId?.ToString() ?? string.Empty)" />
                    <input type="text" id="clienteNombreInput" class="form-control" list="clientesDatalist" placeholder="Escribe el nombre del cliente..." autocomplete="off" />
                    <datalist id="clientesDatalist">
                        @foreach (var c in Model.Clientes)
                        {
                            <option value="@c.Text" data-id="@c.Value"></option>
                        }
                    </datalist>
                </div>
                <div class="col-md-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                    <a asp-action="Historial" class="btn btn-outline-secondary">Ver todos</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <label for="searchHistorial" class="form-label mb-1">Buscar en historial</label>
            <input type="text" id="searchHistorial" class="form-control" placeholder="Cliente, detalle, método o cobrador..." />
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table id="historialPagosTable" class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Fecha</th>
                        <th>Cliente</th>
                        <th>Préstamo</th>
                        <th>Detalle</th>
                        <th>Tipo pago</th>
                        <th>Método</th>
                        <th>Cobrado por</th>
                        <th class="text-end">Balance pendiente</th>
                        <th class="text-end">Capital</th>
                        <th class="text-end">Interés</th>
                        <th class="text-end">Total</th>
                        <th class="text-end">Recibido</th>
                        <th class="text-end">Devuelta</th>
                        <th>Recibo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Pagos)
                    {
                        <tr>
                            <td>@p.FechaLocal.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@p.ClienteNombre</td>
                            <td>#@p.PrestamoId</td>
                            <td>@(string.IsNullOrWhiteSpace(p.DetalleAplicacion) ? "-" : p.DetalleAplicacion)</td>
                            <td>@p.TipoPago</td>
                            <td>@p.MetodoPago</td>
                            <td>@p.AplicadoPor</td>
                            <td class="text-end">@p.BalancePendiente.ToString("C")</td>
                            <td class="text-end">@p.CapitalAbonado.ToString("C")</td>
                            <td class="text-end">@p.InteresAbonado.ToString("C")</td>
                            <td class="text-end fw-semibold">@p.TotalPagado.ToString("C")</td>
                            <td class="text-end">@p.MontoRecibido.ToString("C")</td>
                            <td class="text-end">@p.CambioDevuelto.ToString("C")</td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a asp-action="ReciboPdf" asp-route-id="@p.PagoId" asp-route-formato="A4" target="_blank" class="btn btn-sm btn-outline-primary">A4</a>
                                    <a asp-action="ReciboPdf" asp-route-id="@p.PagoId" asp-route-formato="80mm" target="_blank" class="btn btn-sm btn-outline-dark">80mm</a>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Pagos.Any())
                    {
                        <tr>
                            <td colspan="14" class="text-center text-muted py-4">No hay pagos registrados para el filtro seleccionado.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const clienteInput = document.getElementById('clienteNombreInput');
            const clienteIdHidden = document.getElementById('clienteIdHidden');
            const clienteOptions = Array.from(document.querySelectorAll('#clientesDatalist option'));

            function resolveCliente() {
                const value = (clienteInput?.value || '').trim();
                const option = clienteOptions.find(o => o.value === value);
                if (option) {
                    clienteIdHidden.value = option.getAttribute('data-id');
                } else if (clienteIdHidden) {
                    clienteIdHidden.value = '';
                }
            }

            function restoreCliente() {
                if (!clienteIdHidden?.value || !clienteInput) return;
                const selected = clienteOptions.find(o => o.getAttribute('data-id') === clienteIdHidden.value);
                if (selected) {
                    clienteInput.value = selected.value;
                }
            }

            restoreCliente();
            if (clienteInput) {
                clienteInput.addEventListener('input', resolveCliente);
                clienteInput.addEventListener('change', resolveCliente);
            }

            const searchHistorial = document.getElementById('searchHistorial');
            const table = document.getElementById('historialPagosTable');
            if (!searchHistorial || !table) return;

            const rows = Array.from(table.querySelectorAll('tbody tr'));
            searchHistorial.addEventListener('input', function () {
                const value = (searchHistorial.value || '').toLowerCase().trim();
                for (const row of rows) {
                    const rowText = (row.textContent || '').toLowerCase();
                    row.style.display = !value || rowText.includes(value) ? '' : 'none';
                }
            });
        })();
    </script>
}
